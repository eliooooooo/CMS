
{% extends 'page.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

    <div class="login-container">
        <div class="connexion">
            <h1>Formulaire de connexion</h1>
            <hr>
            <form method="post" action="./app/controllers/LoginController.php">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" id="username" name="username" value="{{ last_username }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="mdp_user" name="mdp_user" required>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>
            {# <p>Vous n'avez pas encore de compte ?<a href="inscription.php">Inscrivez-vous</a></p> #}
        </div>
    </div>

{% endblock %}
