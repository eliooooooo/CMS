<div class="wrapper cat-{{article.category[0].id}}">
  <div class="article-left">
    <a class="retour" href="{{site_url}}category?action=readbycat&id={{article.category[0].id}}"><img
        src="{{site_url}}public/src/icons/retour.svg" width="40px"
        style="margin: auto; margin-top: 40px; margin-bottom: 40px; margin-left: 25px; top: 30px;"></a>
    <nav class="nav-article">
      <ul>
        {% set i = 0 %}
        {% for article in article.category.articles %}
        {% set i = i + 1 %}
        <li>
          <button class='btn-article btn-article-{{i}}' title="{{article.catchphrase}}">
            {{article.svgIcon|raw}}
            {# <object type="image/svg+xml" class="article-icon"
              data="{{site_url}}public/src/icons/loup3-min.svg"></object> #}
          </button>
        </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
  <div class="article-container">
    {% set i = 0 %}
    {% for article in article.category.articles %}
    {% set i = i + 1 %}
    <div class="article full {{article.class}} article-{{i}}">
      <div class="article-info">
        <h2>{{article.title|raw}}</h2>
        <p>{{article.subtitle|raw}}</p>
        <div class='auteur'>
          {% set auteurs = article.author %}
          {% set tableau = auteurs|split('/') %}
          {% for auteur in tableau %}
          {% if auteur starts with 'JRI:' %}
          {% set auteur = auteur|replace({'JRI:': ''}) %}
          <p>JRI : {{auteur}}</p>
          {% elseif auteur starts with 'Redac:' %}
          {% set auteur = auteur|replace({'Redac:': ''}) %}
          <p>Rédactrice : {{auteur}}</p>
          {% else %}
          <p>{{auteur}}</p>
          {% endif %}
          {% endfor %}
        </div>
      </div>
      {% for blocks in article.blocks %}
      {% include "display/display_blocks.html.twig" %}
      {% endfor %}
    </div>
    {% endfor %}
  </div>
</div>

{% block script %}
<script src="{{site_url}}dist/main.js"></script>
{% endblock %}