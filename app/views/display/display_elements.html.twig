{% if element.tags == 'figure' %}
  <figure class="element {{element.class}}">
    <img src="public/src/uploads/{{element.files}}" alt="{{element.files}}" {% if element.class != '' %} class="{{element.class}}" {% endif %}/>
    <figcaption>{{element.content}}</figcaption>
  </figure>
{% elseif element.tags == 'img' %}
  <img src="public/src/uploads/{{element.files}}" alt="{{element.files}}" class="element {{element.class}}"/>
{% elseif element.tags == 'video' %}
  <video class="element {{element.class}}" controls>
    <source src="public/src/uploads/{{element.files}}" type="video/mp4">
  </video>
{% elseif element.tags == 'audio' %}
  <audio class="element {{element.class}}" controls>
    <source src="public/src/uploads/{{element.files}}" type="audio/ogg">
  </audio>
{% elseif element.tags == 'audio-player' %}
  <div class="audio-listener">
    {# Remplir le champs lien pour renseigner l'image de l'element audio-player #}
    <img src="{{site_url}}public/src/uploads/{{ element.link }}">
    <h1>{{ element.content }}</h1>
    <p>{{element.alt}}</p>
    <audio id="song">
        <source src="{{site_url}}public/src/uploads/{{ element.files }}" type="audio/mpeg">
    </audio>
    <input type="range" value="0" id="progress">
    <div class="controls">
        <div onclick="playbackward()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="backward">
                <path d="M.5 3.5A.5.5 0 0 0 0 4v8a.5.5 0 0 0 1 0V8.753l6.267 3.636c.54.313 1.233-.066 1.233-.697v-2.94l6.267 3.636c.54.314 1.233-.065 1.233-.696V4.308c0-.63-.693-1.01-1.233-.696L8.5 7.248v-2.94c0-.63-.692-1.01-1.233-.696L1 7.248V4a.5.5 0 0 0-.5-.5"/>
            </svg>
        </div>
        <div onclick="toggleplay()" >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="ctrl-play-pause">
                <path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="ctrl-play-pause hidden">
                <path d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5m5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5"/>
            </svg>
        </div>
        <div onclick="playforward()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="forward">
                <path d="M15.5 3.5a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-1 0V8.753l-6.267 3.636c-.54.313-1.233-.066-1.233-.697v-2.94l-6.267 3.636C.693 12.703 0 12.324 0 11.693V4.308c0-.63.693-1.01 1.233-.696L7.5 7.248v-2.94c0-.63.693-1.01 1.233-.696L15 7.248V4a.5.5 0 0 1 .5-.5"/>
            </svg>
        </div>
    </div>
  </div>
{% elseif element.tags == 'a' %}
  <a href="{{element.link}}" class="element {{element.class}}"> {{element.content}} </a>
{% else %}
  <{{element.tags}} class="element {{element.class}}" > {{element.content|raw}} </{{element.tags}}>
{% endif %}